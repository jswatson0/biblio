<div class="mylist">
  <h1>Your Books</h1>
</div>
<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Published</th>
    <th>Category</th>
    <th>Description</th>
    <th>Rating</th>
    <th>Isbn</th>
    <th>Cover</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.published %></td>
    <td><%= book.catagory %></td>
    <td><%= book.description %></td>
    <td><%= book.rating %></td>
    <td><%= book.isbn %></td>
    <td><%= image_tag(book.cover_url, width: 50) if book.cover.present? %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_book_path, class: "btn btn-primary" %>
